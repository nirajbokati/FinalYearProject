@model tour.Models.tblPackage
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/Content/ckeditor/contents.css" rel="stylesheet" />
<script src="~/Content/ckeditor/ckeditor.js"></script>
<div class="col-lg-9">

    @using (Html.BeginForm("Index", "Admin", FormMethod.Post,
     new { enctype = "multipart/form-data" }))
    {
        <div class="row" style="margin-top:120px;">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="panel">
                    <div class="panel-heading">
                        <h4 class="text-center">Add Destination</h4>
                    </div>
                    <div class="panel-body">

                        <div class="form-group">
                            <label for="name">Image</label>
                            <div class="image" style="width:100%;height:150px;">
                                <img src="" id="imagePreview" alt="Preview Image" style="width:300px;height:150px;" />
                                <input type="file" name="file" id="file" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="name"> Packagename </label>
                        @Html.TextBoxFor(model => model.Tour_Name, new { @class = "form-control", @placeholder = "Product Name" })
                    </div>
                    <div class="form-group">
                        <label for="name">Price</label>
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Price" })
                    </div>

                    <div class="col-lg-6">
                        <h3>Start Date</h3>
                        @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", @placeholder = "Start Date" })
                    </div>
                    <div class="col-lg-6">
                        <h3>End Date</h3>
                        @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", @placeholder = "EndDate" })
                    </div>
                    <div class="form-group">
                        <h3>Packagedetails</h3>
                        @Html.TextBoxFor(model => model.Packagedetails, new { @id = "ckeditor", @class = "form-control" })
                        <script>
                            CKEDITOR.replace("ckeditor");
                        </script>

                    </div>
